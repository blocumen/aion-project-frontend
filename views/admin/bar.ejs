	.max-h
	{height: 170px !important;}
	#close{
		background: linear-gradient(to right,#bd3128 0,#bd3128 100%);
    border-radius: 50%;
    height: 50px;
    left: 18px;
    opacity: 1;
    position: relative;
    float: right;
    top: -21px;
    width: 50px;
	border:1px;
    text-shadow: inherit;
    color: #fff;
    z-index: 99;
	}
