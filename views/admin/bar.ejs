<div class="row">
	<div class="col-xs-8">
		<h3 class="page-title">All Bars</h3>
	</div>
	<div class="col-xs-4 text-right m-b-30">
		<a class="btn btn-primary rounded pull-right" style="background-color:#0c0c0c" onclick="addModel();"><i class="fa fa-plus"></i> Add Bar</a>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped custom-table m-b-0" id="example">
				<thead>
					<tr>
						<th style="width : 300px;">Name</th>
						<th>Email</th>
						<th>Mobile</th>
						<th>Date</th>
						<th>Average Rating</th>
						<th class="text-right">Actions</th>
					</tr>
				</thead>
				<tbody>

				</tbody>
			</table>
		</div>
	</div>
</div>
<div id="dataModel" class="modal custom-modal fade" role="dialog">
	<div class="modal-dialog">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
		<div class="modal-content modal-lg">
			<div class="modal-header">
				<h4 class="modal-title">Add Bar</h4>
			</div>
			<div class="modal-body">
				<div class="m-b-30">
					<form id="formId">
						<div class="row">
							
							<div class="col-md-6">
								<div class="form-group">
									<label class="control-label">Name <span class="text-danger">*</span></label>
									<input class="form-control" type="text" id="barName" name="barName">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="control-label">Mobile </label>
									<input class="form-control" type="mobile" id="mobile" name="mobile">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="control-label">Email <span class="text-danger">*</span></label>
									<input class="form-control" type="text" id="email" name="email">
									<input class="form-control" type="hidden" id="oldemail" name="oldemail">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="control-label">Password <span class="text-danger">*</span></label>
									<input class="form-control" type="text" id="password" name="password">
								</div>
							</div>									
							
							<div class="col-md-6">
								<div class="form-group">
									<label class="control-label">Address</label>
									<input class="form-control floating" type="address" id="address" name="address">
								</div>
							</div>							
							
						</div>
						
						<div id="loading">
						  <img id="loading-image" src="/public/img/load.gif" alt="Loading..." />
						</div>
						<div class="m-t-20 text-center">
							<button type="button" class="btn btn-primary" onclick="submitData();" id="add_update">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="dataModel1" class="modal custom-modal fade" role="dialog">
	<div class="modal-dialog">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
		<div class="modal-content modal-lg">
				<div class="modal-header">
						<h4 class="modal-title">Add Images</h4>
				</div>
				<div class="col-md-4">
						<div class="form-group">
							<!-- <label class="control-label">Product Image <span class="text-danger">*</span></label> -->
							<input type="hidden" id="baseImage"   multiple="true"/>
							<input style="height:40px" class="form-control" type="file" id="productImage" name="productImage" onchange="showProductImagePreview(this)">
							<span style="color:red">Recommended Size 690 * 690</span>
						</div>
						
				</div>
				<div class="m-t-20 text-center">
						<button type="button" class="btn btn-primary"  id="add_update2">Save</button>
				</div>
				<div class="row m-t-50" id="imagesAll">
					
				</div>
		</div>
</div>
</div>

<input type="hidden" id="barId" />
<form id="formIDS">
	<input type="hidden" id="flag" value="0" />
</form>



